    <div style="height: 150px"></div>

                <section id='intro'>
                        <div class='container'>
                        <h3>Preview</h3>
                            <div class='row'>
                                <div class='col-md-4'>
                                    <img src="itembg.jpg" alt="image">
                                </div>
                                <div class='col-md-4'>
                                    <img src="itembg.jpg" alt="image">
                                </div>
                                <div class='col-md-4'>
                                    <img src="itembg.jpg" alt="image">
                                </div>
                            </div>
                        </div>
                        </div>
                        
                    </section>
                    <hr>
                    <section id='singlecontent'>
                        <div class="container">
                            <div class='row'>
                                <div class='col-md-8'>
                                    <h1> <span class='thetag'>{{name}}</span></h1>
                                    <p>
                                        Floor: {{floor}}/F<br>
                                    </p>
                                    <h4>Description</h4>
                                    <p class='lead'>{{description}}</p>

                                </div>
                                <div class='col-md-4'>
                                    <div class='apply'>
                                        <p class='lead'>Can be booked by students: <b><i class="far fa-calendar-check"></i>{{studentAvailable}}</b></p> 
                                        <p class='lead'>Maximum number of people: <b><i class="far fa-calendar-check"></i>{{peoplelimit}}</b></p> 
                                        <hr>
                                        <a class="btn btn-primary btn-lg" href="/booking?{{RID}}" role="button">Booking room now</a>
                                        <a class="btn btn-success btn-lg" href="#" role="button">Check Current Availability</a>
